page {
  font-family:cursive;
}
.chat-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.message {
  max-width: 60%;
  margin: 10px;
  padding: 10px;
  border-radius: 10px;
}

.text {
  word-wrap: break-word;
}

.input-container {
  display: flex;
  justify-content: space-between;
  padding: 10px;
}

.input {
  width: 70%;
  height: 40px;
  padding: 5px;
  border-radius: 20px;
  border: 1px solid grey;
}

.send-button {
  width: 20%;
  height: 40px;
  border-radius: 20px;
  background-color: #1aad19;
  color: white;
  text-align: center;
  line-height: 40px;
}



/* CSS */
.button-3 {
  -webkit-user-select: none;
  -webkit-tap-highlight-color: rgba(0,0,0,0);
  appearance: none;
  background-color: #2ea44f;
  border: 1px solid rgba(27, 31, 35, .15);
  border-radius: 6px;
  box-shadow: rgba(27, 31, 35, .1) 0 1px 0;
  box-sizing: border-box;
  color: #fff;
  cursor: pointer;
  display: inline-block;
  font-family: -apple-system,system-ui,"Segoe UI",Helvetica,Arial,sans-serif,"Apple Color Emoji","Segoe UI Emoji";
  font-size: 14px;
  font-weight: 600;
  line-height: 20px;
  padding: 6px 16px;
  position: relative;
  text-align: center;
  text-decoration: none;
  user-select: none;
  -webkit-user-select: none;
  touch-action: manipulation;
  vertical-align: middle;
  white-space: nowrap;
}

.button-3:focus:not(:focus-visible):not(.focus-visible) {
  box-shadow: none;
  outline: none;
}

.button-3:hover {
  background-color: #2c974b;
}

.button-3:focus {
  box-shadow: rgba(46, 164, 79, .4) 0 0 0 3px;
  outline: none;
}

.button-3:disabled {
  background-color: #94d3a2;
  border-color: rgba(27, 31, 35, .1);
  color: rgba(255, 255, 255, .8);
  cursor: default;
}

.button-3:active {
  background-color: #298e46;
  box-shadow: rgba(20, 70, 32, .2) 0 1px 0 inset;
}

.message-container {
  display: flex;
  align-items: flex-end;
  margin-bottom: 16px;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}

.nickname-and-message {
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 14px;
  color: #888;
  margin-bottom: 2px;
}

.message-bubble {
  padding: 10px;
  background-color: #f8f8f8;
  border-radius: 5px;
  font-size: 16px;
  color: #333;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
}
.modal-content {
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  border-radius: 10px;
}
.finlist {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.finlist-content {
  width: 80%;
  display: flex;
  flex-direction: column;
  /* background-color: rgba(255, 255, 255, 1); */
  align-items: center;
  padding: 20px;
  border-radius: 10px;
}

.btn1 {
  width: 100%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  background-color: rgb(219, 219, 176);
  color: white;
  border-radius: 5px;
