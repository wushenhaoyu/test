/* pages/class1/class1.wxml.wxss */
page {
  font-family:cursive;
}
.container {
  position: relative;
  width: 100%;
  height: 100%;
}
.background-image {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -1;
}
.image {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  /* z-index: -1; */
}
.background {
  width: 100%;
  height: 100%;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0);
  display: flex;
  justify-content: center;
  align-items: center;
}
.modal-content {
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  border-radius: 10px;
}

.dialogueBox {
  position: absolute;
  bottom: 0;
  width: 100%;
  padding: 20rpx;
  background: rgba(161, 153, 153, 0.5);
  color: #fff;
}

.finlist {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.finlist-content {
  width: 80%;
  display: flex;
  flex-direction: column;
  /* background-color: rgba(255, 255, 255, 1); */
  align-items: center;
